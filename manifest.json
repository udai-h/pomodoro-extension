{
  "manifest_version": 3,
  "name": "Pomodoro Bar",
  "version": "1.0",
  "description": "A minimal Pomodoro timer with a simple visual progress bar.",
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_title": "Pomodoro Timer",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/pomodoro_icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
