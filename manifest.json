{
  "manifest_version": 3,
  "name": "Pomodoro Bar",
  "version": "1.0",
  "description": "A minimal Pomodoro timer with a simple visual progress bar.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Pomodoro Timer",
    "default_popup": "popup/popup.html"
  }
}
